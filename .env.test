# Test Environment Configuration
# NODE_ENV=test ensures isolated test mode

NODE_ENV=test

# Test Database (isolated from production)
MONGODB_URI=mongodb://localhost:27017/smart-link-hub-test
DB_NAME=smart-link-hub-test

# Test Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Server Configuration
PORT=3001

# Security (test-only secrets - NOT for production)
JWT_SECRET=test-jwt-secret-for-testing-only-change-in-prod
JWT_EXPIRES_IN=1h
HASH_SALT_ROUNDS=10

# Cache Settings
RULE_TREE_TTL_SECONDS=10

# Worker Settings (faster for tests)
STATS_AGGREGATION_INTERVAL_MS=5000

# ML Scorer (disabled for tests)
USE_ML_SCORER=false
ML_MODEL_ENDPOINT=
